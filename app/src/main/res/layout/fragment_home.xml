<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_1"
    tools:context=".view.bottomNavigation.ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="100.px"
            android:layout_height="150.px"
            android:layout_margin="50.px"
            android:layout_marginStart="50.px"
            android:layout_marginEnd="50.px"
            android:background="@android:color/transparent"
            android:contentDescription="@string/perfil"
            android:scaleType="centerCrop"
            android:layout_marginBottom="50.px"
            android:src="@drawable/baseline_menu_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintWidth_default="wrap"
            />

        <EditText
            android:id="@+id/search_input"
            android:layout_width="0.dp"
            android:layout_height="150.px"
            android:autofillHints=""
            android:hint="@string/pesquisar"
            android:inputType="text"
            android:textSize="14.sp"
            android:padding="16dp"
            android:background="@drawable/background_search_bar"
            android:drawableEnd="@drawable/baseline_search_24"
            android:layout_marginStart="50.px"
            android:layout_marginEnd="50.px"
            android:layout_marginBottom="50.px"
            android:layout_marginTop="50.px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_icon"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20.dp"
            android:paddingTop="20.dp"
            android:paddingBottom="180.px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/produtos"
                android:textSize="20.sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="20.dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/produto_item"
                />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>