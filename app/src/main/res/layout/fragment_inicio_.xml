<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_1"
    tools:context=".view.drawerNavigation.DrawerActivity"
    >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bem vindo!"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Que tal começarmos o dia nos organizando?"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    />

                <Button
                    android:id="@+id/btn_estoque"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gerenciar Estoque de Produtos"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:elevation="5dp"
                    android:layout_marginVertical="10dp"
                    />
                <Button
                    android:id="@+id/btn_fiado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gerenciar Fiados"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:elevation="5dp"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faça uma venda fácil e rápida"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginVertical="10dp"
                    />

                <Button
                    android:id="@+id/btn_caixa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ir para o Caixa de Vendas"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:background="@color/green"
                    android:textColor="@color/white"
                    android:elevation="5dp"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>


        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>