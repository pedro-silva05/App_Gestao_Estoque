<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fundo do CardView -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Cor de fundo do CardView -->
            <corners android:radius="8dp"/>  <!-- Raio dos cantos -->
        </shape>
    </item>

    <!-- Desenho das bordas -->
    <item>
        <shape android:shape="rectangle">
            <!-- Borda superior (reta) -->
            <stroke
                android:width="4dp"
                android:color="#000000"
                android:dashWidth="0dp"
                android:dashGap="0dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <path android:fillColor="#000000"
                android:pathData="M 0,100 L 0,0 L 100,0 L 75,100 Z"/> <!-- Formato de trapézio -->
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <!-- Borda inferior (reta) -->
            <stroke
                android:width="4dp"
                android:color="#000000"
                android:dashWidth="0dp"
                android:dashGap="0dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <path android:fillColor="#000000"
                android:pathData="M 0,0 L 25,100 L 100,100 L 100,0 Z"/> <!-- Outro formato de trapézio -->
        </shape>
    </item>
</layer-list>
